#include <iostream>;
#include <string>;
#include <fstream>;
#include <istream>;
#include <ctype.h>;
using namespace std;
int main() {
	setlocale(LC_ALL, "Rus");
	char letters[30];
	cout << "Введите 30 букв на одном языке и в одном регистре без пробелов" << endl;
	for (int i = 0; i < 30; i++) {
		cin >> letters[i];
	}
	for (int i = 0; i < 30; i++) {
		if (!(isalpha(letters[i]))) {
			cout << "Не все символы являются буквами. Повторите попытку." << endl;
			return 0;
		}
	}
	for (int i = 0; i < 30; i++) {
		for (int j = 0; j < 29; j++) {
			if ((tolower(int(letters[j]))) > (tolower(int(letters[j + 1])))){
				char b = letters[j];
				letters[j] = letters[j + 1];
				letters[j + 1] = b;
			}
		}
	}
	cout << "Итоговая строка: " << endl;
	for (int i = 0; i < 30; i++) {
		cout << letters[i] << " ";
	}
	return 0;
}
