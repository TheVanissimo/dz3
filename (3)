#include <iostream>;
#include <string>;
#include <fstream>;
#include <istream>;
using namespace std;
int main() {

	setlocale(LC_ALL, "Rus");
	string path = "myFile.txt";
	ofstream fout;
	fout.open(path);
	if (!fout.is_open()) {
		cout << "Ошибка открытия файла!" << endl;
	}
	else
	{
		string a;
		cout << "Ввод текста в файл: \n";
		getline(std::cin, a);
		fout << a << endl;
	}
	fout.close();

	ifstream fin;
	fin.open(path);
	if (!fin.is_open()) {
		cout << "Ошибка открытия файла!" << endl;
	}
	else
	{
		cout << "Файл открыт" << endl;
		string str;
		while (!fin.eof())
		{
			str = "";
			getline(fin, str);
			cout << str << endl;
		}
	}
	fin.close();

	return 0;
}
