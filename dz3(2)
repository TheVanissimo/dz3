#include <iostream>
using namespace std;

float s, p, n;
double ssudasumma(float s, float p, float n) {
	float r;
	r = p / 100;
	double m;
	m = (s * r * pow(1 + r, n)) / (12 * (pow(1 + r, n) - 1));
	return m;
}
int main() {
	setlocale(LC_ALL, "Rus");
	float s, p, n, m;
	cout << "Введите сумму кредита" << endl;
	cin >> s;
	cout << "Введите кол-во лет" << endl;
	cin >> n;
	cout << "Введите месячную выплату" << endl;
	cin >> m;
	if ((n == 0) or (s < 0)) {
		if (n == 0) {
			cout << "Количество лет равно 0. Задача не имеет смысла, т.к. проценты не начислятся";
		}
		if (s < 0) {
			cout << "Сумма кредита меньше 0";
		}
	}
	else {
		double l, ri, mi;
		float ep;
		ri = pow(10, 8);
		l = -(pow(10, 4));
		ep = pow(10, -3);
		mi = 0.0;
		while (ri - l > ep) {
			mi = (l + ri) / 2;
			if (ssudasumma(s, mi, n) >= m) {
				ri = mi;
			}
			else {
				l = mi;
			}
		}
		cout << "Процент с дробной частью " << l << endl;
		cout << "Примерно равен " << round(l) << endl;
	}
}
